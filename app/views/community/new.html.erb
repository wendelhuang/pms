<%= form_tag({action: 'create'}, method: 'post', role: 'form', class: 'form-horizontal') do %>
  <div class='form-group'>
    <%= label_tag 'name', '小区名称', for: 'name', class: 'control-label' %>
    <%= text_field_tag 'name', '', placeholder: '小区名称' %>
  </div>

  <div class='form-group'>
    <%= label_tag 'localtation', '小区位置', for: 'localtation', class: 'control-label' %>
    <%= text_field_tag 'localtation', '', placeholder: '城市 城区 街道' %>
  </div>
  
  <div class='form-group'>
    <%= label_tag 'tel', '电话', for: 'tel', class: 'control-label' %>
    <%= text_field_tag 'tel', '', placeholder: '' %>
  </div>

  <%= submit_tag '创建', class: 'btn btn-default' %>
<% end %>
